CREATE TABLE tbl (
	a int NOT NULL,
	b int NOT NULL,
	c int NOT NULL,
	d int NOT NULL,
	PRIMARY KEY (`a`),
	UNIQUE GLOBAL INDEX `gu_idx_c` (`c`) PARTITION BY KEY (c),
	GLOBAL INDEX `g_idx_b`(`b`) PARTITION BY KEY (b)
)
PARTITION BY KEY (a);
